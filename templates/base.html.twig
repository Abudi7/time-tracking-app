<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}Time Tracking{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body class="bg-light">

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
      <div class="container">
        <a class="navbar-brand" href="{{ path('app_home') }}">Time Tracking</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link text-white" href="{{ path('app_home') }}">🏠 Home</a>
            </li>

            {% if app.user %}
              <li class="nav-item">
                <a class="nav-link text-white" href="#">📧 {{ app.user.email }}</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-white" href="{{ path('app_time_tracking') }}">⏱️ Time Tracking</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-white" href="{{ path('app_logout') }}">🚪 Logout</a>
              </li>
            {% else %}
              <li class="nav-item">
                <a class="nav-link text-white" href="{{ path('app_login') }}">🔐 Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-white" href="{{ path('app_register') }}">📝 Register</a>
              </li>
            {% endif %}
          </ul>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <div class="container">
      {% for label, messages in app.flashes %}
        {% for message in messages %}
          <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        {% endfor %}
      {% endfor %}
    </div>

    <!-- Page Content -->
    <main class="container">
      {% block body %}{% endblock %}
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
